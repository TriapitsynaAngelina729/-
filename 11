#include <stdio.h>
#include <math.h>
#include <stdlib.h>
int main(){
int a, b, x, p, nom;
float a1, b1, c, sum, x1, x2, x3, y1, y2, y3, t, l, m, s, ac, ab;
printf ("Даны две переменные целого типа: A и B. Если их значения не равны, то присвоить каждой переменной большее из этих значений, а если равны, то присвоить переменным нулевые значения. Вывести новые значения переменных A и B.\n");
printf ("Введите целое число А ");
scanf ("%i", &a);
printf ("Введите целое число B ");
scanf ("%i", &b);
if (a != b){
    if (b>a)
    a = b;
    else b = a;
}
else{
a = 0;
b = 0;}
printf ("A = %i, B = %i\n", a, b);
printf (" \n");

printf ("Задание 2. Даны три числа. Найти сумму двух наибольших из них.\n");
printf ("Введите число А ");
scanf ("%f", &a1);
printf ("Введите число B ");
scanf ("%f", &b1);
printf ("Введите число C ");
scanf ("%f", &c);
if (a1<b1 && b1<c)
sum = b1 + c;
else {
    if (a1>b1 && b1>c) sum = a1 + b1;
else sum = a1 +c;}
printf ("Сумма двух наибольших чисел равна %f \n", sum);
printf (" \n");

printf ("Задание 3. На плоскости расположены три точки: A, B, C. Определить, какая из двух последних точек (B или C) расположена ближе к A, и вывести эту точку и ее расстояние от точки A.\n");
printf ("Введите первую координату точки A ");
scanf ("%f", &x1);
printf ("Введите вторую координату точки A ");
scanf ("%f", &y1);
printf ("Введите первую координату точки B ");
scanf ("%f", &x2);
printf ("Введите вторую координату точки B ");
scanf ("%f", &y2);
printf ("Введите первую координату точки C ");
scanf ("%f", &x3);
printf ("Введите вторую координату точки C ");
scanf ("%f", &y3);
ac = sqrt(abs(x2 - x1)+abs(y2-y1));
ab = sqrt(abs(x3 - x1)+abs(y3-y1));
if (ac<ab) 
{s = ac;
 printf ("Ближе к точке А расположена точка C \n");   
}
else 
{s = ab;
printf ("Ближе к точке А расположена точка B \n");}
printf ("Расстояние от этой точки до точки А равно %f \n", s);
printf (" \n");

printf ("Задание 4. Даны координаты точки, не лежащей на координатных осях OX и OY. Определить номер координатной четверти, в которой находится данная точка\n");
printf ("Введите первую ненулевую координату точки ");
scanf ("%f", &l);
printf ("Введите вторую ненулевую координату точки ");
scanf ("%f", &m);
if (l>0 && m>0) nom = 1;
if (l>0 && m<0) nom = 4;
if (l<0 && m>0) nom = 2;
if (l<0 && m<0) nom = 3;
printf ("Номер координатной четверти, в которой находится данная точка %i \n", nom);
printf (" \n");

printf ("Задание 5. Дано целое число. Вывести его строку-описание вида «отрицательное четное число», «нулевое число», «положительное нечетное число» и т. д.\n");
printf ("Введите целое число ");
scanf ("%i", &p);
if (p == 0)
printf ("Это число нулевое \n");
if (p>0 && p%2 == 0)
printf ("Это число положительное чётное \n");
if (p>0 && p%2 != 0)
printf ("Это число положительное нечётное \n");
if (p<0 && p%2 == 0)
printf ("Это число отрицательное чётное \n");
if (p<0 && p%2 != 0)
printf ("Это число отрицательное нечётное \n");
printf (" \n");

printf ("Задание 6. Дано целое число, лежащее в диапазоне 1–999. Вывести его строку-описание вида «четное двузначное число», «нечетное трехзначное число» и т. д.\n");
printf ("Введите целое число, лежащее в диапазоне 1-999 ");
scanf ("%i", &x);
if (x%2 == 0 && x<10)
printf ("Это число четное однозначное \n");
if (x%2 != 0 && x<10)
printf ("Это число нечетное однозначное \n");
if (x%2 == 0 && x<100 && x>=10)
printf ("Это число четное двузначное \n");
if (x%2 != 0 && x<100 && x>=10)
printf ("Это число нечетное двузначное \n");
if (x%2 == 0 && x>=100 && x<1000)
printf ("Это число четное трёхзначное \n");
if (x%2 != 0 && x>=100 && x<1000)
printf ("Это число нечетное трёхзначное \n");
return 0;}
