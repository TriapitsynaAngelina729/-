#include <stdio.h>
#include <math.h>
#include <stdlib.h>
int main(){
int a, b, a1, b1, c, x, x3, s, d, e, aa, bb, cc, aa1, bb1, cc1, p, t, s1, d1, e1;
printf ("Задание 1. Даны два целых числа: A, B. Проверить истинность высказывания: «Справедливы неравенства A > 2 и B ≤ 3»\n");
printf ("Введите число А ");
scanf ("%i", &a);
printf ("Введите число B ");
scanf ("%i", &b);
if (a>2 && b<=3)
printf ("Высказывание истинно\n");
else
printf ("Высказывание ложно\n");
printf (" \n");

printf ("Задание 2. Даны три целых числа: A, B, C. Проверить истинность высказывания: «Справедливо двойное неравенство A < B < C».\n");
printf ("Введите число А ");
scanf ("%i", &a1);
printf ("Введите число B ");
scanf ("%i", &b1);
printf ("Введите число C ");
scanf ("%i", &c);
if (a1<b1 && b1<c)
printf ("Высказывание истинно\n");
else
printf ("Высказывание ложно\n");
printf (" \n");

printf ("Задание 3. Дано целое положительное число. Проверить истинность высказывания: «Данное число является четным двузначным».\n");
printf ("Введите целое положительное число ");
scanf ("%i", &x);
if ((x%2 == 0) && (x >= 10) && (x<100))
printf ("Высказывание истинно\n");
else
printf ("Высказывание ложно\n");
printf (" \n");

printf ("Задание 4. Дано трехзначное число. Проверить истинность высказывания: «Цифры данного числа образуют возрастающую или убывающую последовательность».\n");
printf ("Введите трёхзначное число ");
scanf ("%i", &x3);
s = (x3/100);
e = (x3%10);
d = ((x3%100)/10);
if ((s>d && d>e) || (s<d && d<e))
printf ("Высказывание истинно\n");
else
printf ("Высказывание ложно\n");
printf (" \n");

printf ("Задание 5. Дано четырехзначное число. Проверить истинность высказывания: «Данное число читается одинаково слева направо и справа налево».\n");
printf ("Введите четырёхзначное число ");
scanf ("%i", &p);
t = p/1000;
s1 = (a%1000)/100;
d1 = (a%100)/10;
e1 = a%10;
if ((t = e) && (s = d))
printf ("Высказывание истинно\n");
else
printf ("Высказывание ложно\n");
printf (" \n");

printf ("Задание 6. Даны целые числа a, b, c, являющиеся сторонами некоторого треугольника. Проверить истинность высказывания: «Треугольник со сторонами a, b, c является прямоугольным».\n");
printf ("Введите стороны треугольника в порядке возрастания \n");
printf ("Введите сторону a ");
scanf ("%i", &aa);
printf ("Введите сторону b ");
scanf ("%i", &bb);
printf ("Введите сторону c ");
scanf ("%i", &cc);
if (cc*cc == aa*aa + bb*bb)
printf ("Высказывание истинно\n");
else
printf ("Высказывание ложно\n");
printf (" \n");

printf ("Задание 7. Даны целые числа a, b, c. Проверить истинность высказывания: «Существует треугольник со сторонами a, b, c».\n");
printf ("Введите сторону a ");
scanf ("%i", &aa1);
printf ("Введите сторону b ");
scanf ("%i", &bb1);
printf ("Введите сторону c ");
scanf ("%i", &cc1);
if ((aa1 < bb1 + cc1) && (bb1 < aa1 + cc1) && (cc1 < aa1 + bb1))
printf ("Высказывание истинно\n");
else
printf ("Высказывание ложно\n");
printf (" \n");
return 0;}
