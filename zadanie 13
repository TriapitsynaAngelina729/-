#include <stdio.h>
#include <math.h>
int main(){
int n, a4, a5, e = -1;
float c, i, c1, a, n2, s, zn, st = 0, sum;
printf ("Задание 1. Дано вещественное число — цена 1 кг конфет. Вывести стоимость 0.1, 0.2, . . . , 1 кг конфет.\n");
printf ("Введите цену конфет за один кг ");
scanf ("%f", &c);
for (i = 0.1; i <= 1; i = i + 0.1){
c1 = c * i;
printf ("%f кг конфет стоит %f \n", i, c1);}
printf (" \n");
printf ("Задание 2. Дано целое число N (> 0). Найти произведение 1.1 · 1.2 · 1.3 · . . . (N сомножителей).\n");
printf ("Введите целое число N (> 0) ");
scanf ("%i", &n);
if (n > 0){
a = 1;
for (i = 1; i <= n; i++)
a = a * (1 + i * 0.1);}
printf ("%f \n", a);
printf (" \n");
printf ("Задание 3. Дано целое число N (> 0). Найти квадрат данного числа, используя для его вычисления следующую формулу: N^2 = 1 + 3 + 5 + . . . + (2·N − 1). После добавления к сумме каждого слагаемого выводить текущее значение суммы.\n");
printf ("Введите целое число N (> 0) ");
scanf ("%i", &n);
for (i = 1; i <= (2 * n  - 1); i += 2){
st += i;
printf ("Текущая сумма равна %f \n", st);}
printf (" \n");
printf ("Задание 4. Дано вещественное число A и целое число N (> 0). Используя один цикл, найти сумму 1 + A + A^2 + A^3 + . . . + A^N\n");
printf ("Введите число A \n");
scanf ("%f", &a);
printf ("Введите целое число N (> 0) \n");
scanf ("%i", &n);
a4 = a;
sum = 1;
for(i=2;i<=n;i++){
sum=sum+a4;
a4=a4*a;}
printf ("Сумма равна %f \n", sum);
printf (" \n");
printf ("Задание 5. Дано вещественное число A и целое число N (> 0). Используя один цикл, найти значение выражения 1 − A + A^2 − A^3 + . . . ± A^N. \n");
printf ("Введите число A ");
scanf ("%f", &a);
printf ("Введите целое число N (> 0) ");
scanf ("%i", &n);
a5 = a;
zn = 1;
for(i=1;i<=n;i++){
zn=zn+(e)*a5;
a5=a5*a;
e=-1*e;
}
printf ("Значение выражения равно %f", zn);
return 0;
}
