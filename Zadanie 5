Задача 1

#include <stdio.h>
#include <math.h>
int main()
{
    float x1, x2, y1, y2, a, b, a2, b2, s;
    printf ("Введите координату x1 ");
    scanf ("%f", &x1);
    printf ("Введите координату x2 ");
    scanf ("%f", &x2);
    printf ("Введите координату y1 ");
    scanf ("%f", &y1);
    printf ("Введите координату y2 ");
    scanf ("%f", &y2);
    a = x2 - x1;
    b = y2 - y1;
    a2 = a * a;
    b2 = b * b;
    s = sqrt(a2 + b2);
    printf ("Расстояниемежду двумя точками равно %f", s);
    return 0;
}

Задание 2

#include <stdio.h>
#include <math.h>
int main()
{
    float a, b, c, s1, s2, sum;
    printf ("Введите число A ");
    scanf ("%f", &a);
    printf ("Введите число B ");
    scanf ("%f", &b);
    printf ("Введите число C ");
    scanf ("%f", &c);
    s1 = c - a;
    s2 = c - b;
    sum = s1 + s2;
    printf ("Длина отрезка AC равна %f, Длина отрезка BC равна %f, Сумма длин отрезков равна %f", s1, s2, sum);
    return 0;
}

